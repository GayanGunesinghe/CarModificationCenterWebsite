<!--items checkout page-->
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@Html.Partial("_HeaderMain")*@    <!--load main header-->

<div class="home">
    <!--banner and breadcrums-->
    <div class="home_overlay"></div>
    <div class="home_content d-flex flex-column align-items-center justify-content-center">
        <h2>Checkout</h2>
    </div>
</div>
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("ShopNow", "Shop")">Shop</a></li>
    <li class="active">Checkout</li>
</ul>

<div class="container body-content">
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Item Name</th>
                <th>Quantitiy</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            @{
                var itemNo = 1;
                var NoOfItems = 1;
                for(int i = 0; i < NoOfItems; i++)
                {
                    <tr>
                        <td>03</td>
                        <td id = "Name_@itemNo">Lamborgini Gallardo (2004)</td>
                        <td id = "Quantity_@itemNo">01</td>
                        <td id = "Price_@itemNo"><span class="badge" id="cartValue">LKR 17,600,000</span></td>
                    </tr>
                    itemNo++;
                }
            }
            </tbody>
        </table>
        <a href="@Url.Action("Payment", "Checkout")">
            <button class="btn btn-default">
                Proceed to Payment
                <span class="fa fa-hand-o-right" aria-hidden="true"></span>
            </button>
        </a>
    </div>
</div>